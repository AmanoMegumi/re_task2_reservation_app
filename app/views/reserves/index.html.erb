<div class="container-fiuld reserve-index">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>

    <tbody>
      <% @reserves.each do |reserve| %>
        <tr>
          <td>
            <%= link_to(controller: 'subscribes', action: 'show', id: reserve.subscribe.id) do %>
              <%= image_tag reserve.subscribe.roomphoto.thumb.url, alt: "部屋画像", class: "subscribe-show-image" %>
            <% end %>
          </td>
          
          <td class="posts-name"><%= link_to reserve.subscribe.roomname, controller: 'subscribes', action: 'show', id: reserve.subscribe.id %></td>
          <td class="posts-content"><%= reserve.subscribe.explanation %></td>
          <td class="price-icon"><%= reserve.reserve_price %></td>
          <td><%= reserve.start_date.to_s(:short_date) %></td>
          <td><%= reserve.end_date.to_s(:short_date) %></td>
          <td><%= reserve.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>