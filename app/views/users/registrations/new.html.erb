<div class="container devise">
  <div class="devise_frame">
    <p class="my-4">新しいアカウントを作成</p>
    <div class="devise_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-row">
          <div class="col-2 required-b pt-2">
          </div>
          <%= f.text_field :username, placeholder: "ユーザー名", autocomplete: "name", class: "form-controll col-10 px-2" %>
        </div>
        
        <div class="field form-row">
          <div class="col-2 required-b pt-2">
          </div>
          <%= f.text_field :email, placeholder: "メールアドレス", autocomplete: "email", class: "form-controll col-10 px-2" %>
        </div>

        <div class="field form-row">
          <div class="col-2 required-b pt-2">
          </div>
          <%= f.password_field :password, placeholder: "パスワード", autocomplete: "new-password", class: "form-controll col-10 px-2"%>
        </div>

        <div class="field form-row">
          <div class="col-2 required-b pt-2">
          </div>
          <%= f.password_field :password_confirmation, placeholder: "パスワード確認", autocomplete: "email", class: "form-controll col-10 px-2" %>
        </div>

        <div class="actions">
          <%= f.submit "新しいアカウントを作成", class: "form-controll btn-primary my-4", data: {disable_with: "ログイン"} %>
        </div>
      <% end %>
      <%= link_to "すでにアカウントをお持ちの方はログイン", user_session_path %>
    </div>
  </div>
  <div class="push-footer"></div>
</div>