<div class="container-fiuld user">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li class="non-active"><%= link_to "アカウント", user_account_path(@user.id) %></li>
        <li class="active"><%= link_to "プロフィール", user_profile_path(@user.id) %></li>
      </ul>
    </div>

    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li class="non-active"><%= link_to "アカウント", user_account_path(@user.id) %></li>

        <li class="active"><%= link_to "プロフィール", user_profile_path(@user.id) %></li>
      </ul>
    </div>

    <div class="col-lg-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        </div>

        <%= form_with model: @user, url: user_registration_path, id: 'profile_user', class: 'profile_user', local: true do |f| %>
          <div class="update-content">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <img class="mx-3 p-1 host-icon" alt="アイコン画像" src="<%= current_user.image %>" onerror="this.onerror=null;this.src='/assets/default_icon.jpg';">
                </div>
              </div>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label for="image", class="col-md-3 required-a" >アイコン画像</label>
              <%= f.file_field :image, placeholder: "アイコン画像をアップロード", autocomplete: "image", class: "mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label for="username", class="col-md-3 required-a">名前</label>
              <%= f.text_field :username, placeholder: "名前を入力", autocomplete: "username", class: "form-controll mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label for="introduction", class="col-md-3 required-a">自己紹介</label>
              <%= f.text_area :introduction, placeholder: "自己紹介を入力", autocomplete: "introduction", rows: 5, class: "form-control mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <%= f.submit "更新", data: {disable_with: "更新"}, class: "col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>
        <% end %>
      
      </div>
    </div>
  </div>
  <div class="push-footer"></div>
</div>