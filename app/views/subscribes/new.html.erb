<div class="container-fiuld subscribe-new">
  <div class="row">
    <div class="col-lg-2 subscribe-nav subscribe-nav-pc d-lg-block d-none">
      <ul>
        <li class="active">
          <%= link_to "基本情報", subscribe_new_path %>
        </li>
      </ul>
    </div>

    <div class="col-lg-2 subscribe-nav subscribe-nav-mobile d-lg-none">
      <ul>
        <li class="active">
          <%= link_to "基本情報", subscribe_new_path %>
        </li>
      </ul>
    </div>

    <div class="col-lg-10 subscribe-view">
      <div class="subscribe-view-box">
        <%= form_with model: @subscribe, url: subscribe_create_path, id: 'new_subscribe', class: 'new_subscribe', local: true do |f| %>

          <div class="update-content">
            <div class="row">
              <h5>ルーム情報登録</h5>
            </div>
          </div>
        
          <div class="update-content">
            <div class="row">
              <label for="roomname", class="col-md-3 required-a">
                ルーム名
              </label>
              <%= f.text_field :roomname, placeholder: "ルーム名を入力", autocomplete: "subscribe_roomname", class: "form-controll mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label for="explanation", class="col-md-3 required-a">
                ルーム紹介
              </label>
              <%= f.text_field :explanation, placeholder: "ルーム説明を入力", autocomplete: "subscribe_explanation", class: "form-controll mb-4 col-md-9", row: "5" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label for="price", class="col-md-3 required-a">
                料金
              </label>
              <%= f.number_field :price, placeholder: "一日あたりの料金を入力", autocomplete: "subscribe_price", class: "form-controll mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label for="address", class="col-md-3 required-a">
                住所
              </label>
              <%= f.text_field :address, placeholder: "住所を入力", autocomplete: "subscribe_address", class: "form-control mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label for="roomphoto", class="col-md-3 required-a" >
                ルーム画像
              </label>
              <%= f.file_field :roomphoto, placeholder: "ルーム画像をアップロード", autocomplete: "subscribe_room_photo", class: "mb-4 col-md-9" %>
            </div>
          </div>

          <%= f.hidden_field :user_id, value: current_user.id %>

          <div class="update-content">
            <div class="row">
              <%= f.submit "登録", class: "col-md-2 btn btn-primary mx-3", data: {disable_with: "登録"} %>
            </div>
          </div>
        <% end %>       
      </div>
    </div>
  </div>
</div>