<header class="header">
  <div class="header-inner">
    <div class="header-left-nav">
      <%= link_to image_tag("logo.png", alt: "サイトロゴ"), root_path %>

      <div class="header-search-container">
        <%= form_with(url: search_subscribes_path, local: true, skip_enforcing_utf8: true, method: :get) do |f| %>
          <div class="header-search d-lg-inline-block d-none">
            <%= f.text_field :address, class: "form-control", placeholder: "エリア" %>
            <i class="fas fa-map-marker-alt" area-hidden="true"></i>
          </div>

          <div class="header-search d-lg-inline-block d-none">
            <%= f.text_field :keyword, class: "form-control", placeholder: "キーワード" %>
            <i class="fas fa-search" aria-hidden="true"></i>
          </div>
          <%= f.submit :search, class: "d-none" %>
        <% end %>
      </div>
    </div>

    <div class="header-right-nav">
      <div class="nav-item">
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary my-2 mx-3" %>
        <%= link_to "登録する", new_user_registration_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</header>